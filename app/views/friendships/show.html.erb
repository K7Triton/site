<h4>Friends</h4>
<ul>
  <% current_user.friends.each do |friend| %>
      <li>
        <%= friend.email %>
        <% if current_user %>
            <%= link_to  "Remove" , friendship_path(:id => friend), :method => :delete, data:{confirm: "Do you want realy delete this user?" }, class: "btn btn-large btn-danger" %>
            <%= link_to "Send message", new_message_path(:friend_id => friend.id), method: :get, class: "btn btn-large btn-primary" %>
        <% end %>
      </li>
  <% end %>
</ul>

<% if current_user  %>
    <h4>Friend Requests</h4>
    <ul>
      <% current_user.requested_friendships.each do |request| %>
          <li>
            <%= request.email %>
            <%= link_to "Accept", friendship_path(:id => request), :method => "put" , class: "btn btn-large btn-primary" %>
            <%= link_to "Decline", friendship_path(:id => request), :method => :delete, class: "btn btn-large btn-danger" %>
          </li>
      <% end %>
    </ul>
<% end %>
